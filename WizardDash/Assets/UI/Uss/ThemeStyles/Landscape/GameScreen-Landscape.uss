.background__container {
    flex-grow: 1;
    width: 100%;
    height: 100%;
    position: absolute;
}

.background__graphic {
    position: absolute;
    width: 100%;
    height: 100%;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    background-color: rgba(41, 12, 33, 0);
    cursor: url('project://database/Assets/UI/Textures/Cursors/Cursor_A.png?fileID=2800000&guid=0fc53ad8e877049c3aef54a3f8a1e01a&type=3#Cursor_A');
}

.info__container {
    width: 100%;
    align-items: center;
    height: 6%;
}

.pause__button-container {
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    position: absolute;
    margin-left: 12px;
    margin-right: 12px;
    margin-top: 12px;
    margin-bottom: 12px;
}

.game-char__container {
    position: absolute;
    left: 0;
    bottom: 20px;
    width: 70%;
    height: 257px;
    background-color: rgba(44, 62, 80, 0);
    flex-direction: row;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    align-items: center;
    opacity: 0.91;
}

.pause__template-container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
    display: none;
}

.game-win__template-container {
    display: none;
}

.game-lose__template-container {
    display: none;
}

.healing-potion__container {
    width: 100%;
    height: 100%;
    position: absolute;
}

.healing-potion__slot {
    width: 24%;
    height: 35%;
    background-color: rgba(255, 0, 0, 0.26);
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
}

.healing-potion__slot-1 {
    background-color: rgba(152, 36, 36, 0.66);
    cursor: url('project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B');
    top: 24%;
    position: absolute;
    left: 16%;
}

.healing-potion__slot-2 {
    position: absolute;
    left: 44%;
    top: 12%;
    background-color: rgba(0, 28, 255, 0.39);
    cursor: url('project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B');
}

.healing-potion__slot-3 {
    position: absolute;
    background-color: rgba(8, 255, 28, 0.45);
    cursor: url('project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B');
    left: 61%;
    opacity: 1;
    display: flex;
    top: 34%;
}

.enemy__container {
    height: 20%;
    width: 40%;
    position: absolute;
    display: flex;
    align-items: center;
    opacity: 1;
    right: 0;
    bottom: 12%;
}
